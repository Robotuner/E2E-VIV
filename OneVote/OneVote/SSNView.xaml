<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneVote.SSNView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="Enter your SSN" /> 
            <Entry x:Name="ssn1" HorizontalOptions="Center" VerticalOptions="FillAndExpand" IsPassword="True"/>
            <Label Text="Repeat your SSN" />
            <Entry x:Name="ssn2" HorizontalOptions="Center" VerticalOptions="FillAndExpand" IsPassword="True"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>