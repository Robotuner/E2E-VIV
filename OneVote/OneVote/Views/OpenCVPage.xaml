<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:OneVote.ViewModels" Appearing="ContentPage_Appearing"
             x:Class="OneVote.Views.OpenCVPage">
    <ContentPage.BindingContext>
        <vm:OpenCVPageViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Image Source="{Binding ImgSource}"/>
            <Label Grid.Row="1" Text="{Binding Message}" FontSize="20" HorizontalOptions="Center" TextColor="Red" />
        </Grid>
    </ContentPage.Content>
</ContentPage>